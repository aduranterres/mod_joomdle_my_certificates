<?xml version="1.0" encoding="utf-8"?>
<extension version="5.0" type="module" method="upgrade" client="site">
    <name>mod_joomdle_my_certificates</name>
    <creationDate>October 2011</creationDate>
    <author>Antonio Duran Terres</author>
    <copyright>Copyright (C) 2014 Antonio Duran Terres</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <authorEmail>antonio@joomdle.com</authorEmail>
    <authorUrl>www.joomdle.com</authorUrl>
    <version>2.0.0</version>
    <description>Shows Moodle certificates for the user</description>
    <namespace path="src">Joomla\Module\JoomdleMyCertificates</namespace>

    <files>
        <folder module="mod_joomdle_my_certificates">services</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/mod_joomdle_my_certificates.ini</language>
        <language tag="en-GB">language/en-GB/mod_joomdle_my_certificates.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="show_send_certificate" type="list" default="0" label="COM_JOOMDLE_SHOW_SEND_CERTIFICATE" description="COM_JOOMDLE_SHOW_SEND_CERTIFICATE_DESCRIPTION">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="certificate_type" type="list" default="custom" label="COM_JOOMDLE_CERTIFICATE_TYPE" description="COM_JOOMDLE_CERTIFICATE_TYPE_DESCRIPTION">
                    <option value="normal">Moodle Certificate module</option>
                    <option value="simple">Simplecertificate</option>
                    <option value="custom">Custom certificate</option>
                    <option value="coursecertificate">Workplace course certificate</option>
                </field>

                <field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
            </fieldset>
        </fields>
    </config>

    <updateservers>
        <server type="extension" priority="1" name="mod_joomdle_my_certificates">http://www.joomdle.com/index.php?option=com_ars&amp;view=update&amp;task=stream&amp;format=xml&amp;id=2</server>
    </updateservers>

</extension>
